<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TestDemo">
    <Color x:Key="S.Color">#409EFF</Color>
    <Color x:Key="H.Color">#66B1FF</Color>
    <Color x:Key="P.Color">#3A8EE6</Color>
    <SolidColorBrush x:Key="S.Brush" Color="{StaticResource S.Color}" />
    <SolidColorBrush  x:Key="H.Brush"  Color="{StaticResource H.Color}" />
    <SolidColorBrush  x:Key="P.Brush"  Color="{StaticResource P.Color}" />
</ResourceDictionary>