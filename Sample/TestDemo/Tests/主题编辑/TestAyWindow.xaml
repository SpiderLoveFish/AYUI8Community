<control:AyWindow x:Class="TestDemo.TestAyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="http://www.ayjs.net/2020"    
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"    BorderThickness="1"
                  MinWidth="1200" MinHeight="600" Width="1400" Height="800"   Title="AYUI X"  
      xmlns:local="clr-namespace:TestDemo" WindowStartupLocation="CenterScreen"
      mc:Ignorable="d" 
      >
    <control:AyWindow.WindowMenu>
        <ContextMenu>
            <MenuItem Header="此窗口为需要全屏和普通之间切换所设计"></MenuItem>
        </ContextMenu>
    </control:AyWindow.WindowMenu>
    <Grid  x:Name="layout"  Background="Transparent">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="遮盖任务栏切换" Width="120" Height="40" Click="Button_Click" Margin="10,0,0,0"></Button>
            <control:AyText Text="点击完，尝试最大化一下"/>
        </StackPanel>
    </Grid>
</control:AyWindow>